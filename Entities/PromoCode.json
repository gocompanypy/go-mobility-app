{
    "name": "PromoCode",
        "type": "object",
            "properties": {
        "code": {
            "type": "string"
        },
        "discount_type": {
            "type": "string",
                "enum": [
                    "percentage",
                    "fixed"
                ],
                    "default": "percentage"
        },
        "discount_value": {
            "type": "number"
        },
        "max_discount": {
            "type": "number"
        },
        "min_trip_amount": {
            "type": "number"
        },
        "max_uses": {
            "type": "integer"
        },
        "used_count": {
            "type": "integer",
                "default": 0
        },
        "valid_from": {
            "type": "string",
                "format": "date"
        },
        "valid_to": {
            "type": "string",
                "format": "date"
        },
        "is_active": {
            "type": "boolean",
                "default": true
        },
        "first_trip_only": {
            "type": "boolean",
                "default": false
        },
        "vehicle_types": {
            "type": "array",
                "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "code",
        "discount_type",
        "discount_value"
    ]
}
