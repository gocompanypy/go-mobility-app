{
    "name": "Notification",
        "type": "object",
            "properties": {
        "user_id": {
            "type": "string"
        },
        "user_type": {
            "type": "string",
                "enum": [
                    "passenger",
                    "driver"
                ]
        },
        "title": {
            "type": "string"
        },
        "message": {
            "type": "string"
        },
        "type": {
            "type": "string",
                "enum": [
                    "trip",
                    "promotion",
                    "reward",
                    "system",
                    "payment"
                ],
                    "default": "system"
        },
        "is_read": {
            "type": "boolean",
                "default": false
        },
        "action_url": {
            "type": "string"
        },
        "metadata": {
            "type": "object",
                "additionalProperties": true
        }
    },
    "required": [
        "user_id",
        "title",
        "message"
    ]
}
